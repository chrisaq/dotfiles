{
"diagnostic.checkCurrentLine": true,
"diagnostic.virtualText": true,
"markdownlint.config": {
    "default": true,
    "whitespace": false
},
"languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "docker": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile", "Dockerfile"]
    }
  }
}
